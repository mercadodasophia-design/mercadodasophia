rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Imagens de produtos: leitura pública, upload apenas para usuários autenticados
    match /products/{productId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Imagens de usuários: apenas o próprio usuário pode acessar
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Imagens de categorias: leitura pública, upload apenas para usuários autenticados
    match /categories/{categoryId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Outros arquivos: apenas usuários autenticados
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
} 